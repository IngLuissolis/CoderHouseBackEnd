<h3>AÃ±adir Producto</h3>
<form id="formulario">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" id="title">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" name="description" id="description">
      </div>
      <div class="form-group">
        <label for="code">Code</label>
        <input type="text" class="form-control" name="code" id="code">
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" name="price" id="price">
      </div>
      <div class="form-group">
        <label for="stock">Stock</label>
        <input type="number" class="form-control" name="stock" id="stock">
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        <input type="text" class="form-control" name="category" id="category">
      </div>
      <div class="form-group">
        <label for="thumbnails">Thumbnails</label>
        <input type="text" class="form-control" name="thumbnails" id="thumbnails">
      </div>
      <div class="form-check">
        <input class="form-check-input" name="status" type="checkbox" id="status" value='true' checked>
        <label class="form-check-label" for="status">Status</label>
      </div>
      <input type="submit" value="Add" class="btn btn-primary">
    </form>

<h1>Lista de Productos en tiempo real</h1>
<table >
    <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Code</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Category</th>
      <th>Thumbnails</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody id="products">
    {{#each products}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.code}}</td>
        <td>{{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
        <td>{{this.thumbnails}}</td>
        <td>{{this.status}}</td>
        <td>
          <button type="button" class="btn btn-danger" id="deleteProduct" data-id="{{this.id}}">Eliminar</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

