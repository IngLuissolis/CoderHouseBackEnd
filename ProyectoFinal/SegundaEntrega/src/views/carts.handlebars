<h1>Carrito Nro {{carts._id}}</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio unitario</th>
      <th>Cantidad</th>
      <th>Acci√≥n</th>
    </tr>
  </thead>
  <tbody>
    {{#each carts.products}}
      <tr>
        <td>{{product.nombre}}</td>
        <td>{{product.camiseta1Precio}}</td>
        <td>{{quantity}}</td>
        <td><button onclick="eliminarProducto('{{../carts._id}}', '{{product._id}}')">Eliminar</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script>
  async function eliminarProducto(cid, pid) {
  fetch(`/api/carts/${cid}/products/${pid}`, {
    method: 'DELETE'
  })
  .then(response => response.json())
  .then(data => {
    console.log(data);
    location.reload();
  })
  .catch(error => console.error(error));
}
</script>